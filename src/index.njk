  <div id="wght-control" class="axis-control">
    <div class="axis__header">
      <h4>wght</h4>
      <div class="subset-type">
        <input type="radio" id="wght_subset__range"
       name="wght-subset-type" value="range" checked>
        <label for="wght_subset__range">Range</label>

        <input type="radio" id="wght_subset__pinned"
       name="wght-subset-type" value="pinned" >
